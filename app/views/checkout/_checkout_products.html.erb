<div class="rounded-lg bg-gray-50 shadow-sm ring-1 ring-gray-900/5 pt-6 pb-6">
  <div class="row-span-full">
    <% day.products.each do |product| %>
      <div class="flex m-10">
        <%= image_tag url_for(product.main_image), class: "h-12 w-12 flex-none rounded-full bg-gray-50 mr-4" if product.main_image.attached? %>
        <div class="min-w-0">
          <p class="mt-1 truncate text-lg text-left leading-5 text-gray-500"><%= product.title %></p>
          <p class="mt-1 truncate text-xs text-left leading-5 text-gray-500"><%= product.description %></p>
          <div class="flex-none self-end">
            <% product.tags.each do |tag| %>
              <dd class="text-left m-1 inline-flex items-center rounded-md bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20"><%= tag %></dd>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
