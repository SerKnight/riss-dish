<%= render partial: 'progress', locals: {
  steps: {
    'Pick Day' => 'active',
    'Choose Slot' => 'disabled',
    'Customize a Meal' => 'disabled',
    'Checkout' => 'disabled'
  }}
%>
<div class="border border-gray-400 rounded p-10 m-20 my-8">
  <div>
    <h2 class="text-base font-semibold leading-6 text-gray-900"><%= @upcoming_meal_copy %></h2>
    <div class="lg:grid lg:grid-cols-12 lg:gap-x-16">
      <div class="mt-10 text-center lg:col-start-8 lg:col-end-13 lg:row-start-1 lg:mt-9 xl:col-start-9">
        <div class="flex items-center text-gray-900">
          <% unless @current_month == 1 %>
            <a href="/checkout/calendar?month=<%= @current_month - 1 %>">
              <button type="button" class="-m-1.5 flex flex-none items-center justify-center p-1.5 text-gray-400 hover:text-gray-500">
                <span class="sr-only">Previous month</span>
                <svg class="h-10 w-10" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd" />
                </svg>
              </button>
            </a>
          <% end %>
          <div class="flex-auto text-sm font-semibold"><%= Date::MONTHNAMES[@current_month] %></div>
          <% unless @current_month == 12 %>
            <a href="/checkout/calendar?month=<%= @current_month + 1 %>">
              <button type="button" class="-m-1.5 flex flex-none items-center justify-center p-1.5 text-gray-400 hover:text-gray-500">
                <span class="sr-only">Next month</span>
                <svg class="h-10 w-10" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
                </svg>
              </button>
            </a>
          <% end %>
        </div>
        <div class="mt-6 grid grid-cols-7 text-xs leading-6 text-gray-500">
          <div>M</div>
          <div>T</div>
          <div>W</div>
          <div>T</div>
          <div>F</div>
          <div>S</div>
          <div>S</div>
          <!--  // black select = bg-gray-900 font-semibold text-white -->
          <!--  // has days = text-indigo-600 // font-semibold-->
        </div>
        <div class="isolate mt-2 grid grid-cols-7 gap-px rounded-lg bg-gray-200 text-sm shadow ring-1 ring-gray-200">
          <% (@start_date..@end_date).each do |date| %>
            <% day = @days.find { |d| d.date.to_date == date } %>
            <% if date == Date.today %>
              <!-- Current Day -->
              <button type="button" class="bg-white py-1.5 text-gray-900 hover:bg-gray-100 focus:z-10">
                <time datetime="<%= date.strftime("%Y-%m-%d") %>" class="mx-auto flex h-7 w-7 items-center justify-center rounded-full bg-gray-900 font-semibold text-white">
                  <%= date.day %>
                </time>
              </button>
            <% elsif day && day.products.any? %>
              <!-- Day with product(s) -->
              <a href="/checkout/slots/<%= day.date.strftime("%Y-%m-%d") %>" class="text-indigo-600 bg-white py-1.5 text-gray-900 hover:bg-gray-100 focus:z-10">
                <time datetime="<%= date.strftime("%Y-%m-%d") %>" class="mx-auto flex h-7 w-7 items-center justify-center rounded-full bg-indigo-900 font-semibold text-white">
                  <%= date.day %>
                </time>
              </a>
            <% else %>
              <!-- Day without product(s) -->
              <button type="button" class="bg-white py-1.5 text-gray-900 hover:bg-gray-100 focus:z-10">
                <time datetime="<%= date.strftime("%Y-%m-%d") %>" class="mx-auto flex h-7 w-7 items-center justify-center rounded-full">
                  <%= date.day %>
                </time>
              </button>
            <% end %>
          <% end %>
          <button type="button" class="bg-gray-50 py-1.5 text-gray-400 hover:bg-gray-100 focus:z-10">
            <time datetime="2022-02-01" class="mx-auto flex h-7 w-7 items-center justify-center rounded-full">1</time>
          </button>
          <button type="button" class="bg-gray-50 py-1.5 text-gray-400 hover:bg-gray-100 focus:z-10">
            <time datetime="2022-02-02" class="mx-auto flex h-7 w-7 items-center justify-center rounded-full">2</time>
          </button>
          <button type="button" class="bg-gray-50 py-1.5 text-gray-400 hover:bg-gray-100 focus:z-10">
            <time datetime="2022-02-03" class="mx-auto flex h-7 w-7 items-center justify-center rounded-full">3</time>
          </button>
          <button type="button" class="bg-gray-50 py-1.5 text-gray-400 hover:bg-gray-100 focus:z-10">
            <time datetime="2022-02-04" class="mx-auto flex h-7 w-7 items-center justify-center rounded-full">4</time>
          </button>
        </button>
      </div>
    </div>
    <ol class="mt-4 divide-y divide-gray-100 text-sm leading-6 lg:col-span-7 xl:col-span-8">
      <% @days.each do |day| %>
        <div class="pt-5 lg:col-start-3 lg:row-end-1">
          <h2 class="sr-only">Summary</h2>
          <div class="rounded-lg bg-gray-50 shadow-sm ring-1 ring-gray-900/5">
            <div class="flex-auto pl-6 pt-6">
              <dt class="text-sm font-semibold leading-6 text-gray-900"><%= day.date.strftime("%A, %B %d, %Y") %></dt>
            </div>
            <div class="row-span-full">
              <% day.products.each do |product| %>
                <div class="flex m-10">
                  <%= image_tag url_for(product.main_image), class: "h-12 w-12 flex-none rounded-full bg-gray-50 mr-4" if product.main_image.attached? %>
                  <div class="min-w-0">
                    <p class="mt-1 truncate text-lg leading-5 text-gray-500"><%= product.title %></p>
                    <p class="mt-1 truncate text-xs leading-5 text-gray-500"><%= product.description %></p>
                    <div class="flex-none self-end px-6 pt-4">
                      <% product.tags.each do |tag| %>
                        <dd class="m-1 inline-flex items-center rounded-md bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20"><%= tag %></dd>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
              <div class="mt-1 border-t border-gray-900/5 px-6 py-6 flex justify-end">
                <a href="/checkout/slots/<%= day.date.strftime('%Y-%m-%d') %>" class="flex items-center rounded-full p-2 text-gray-500 hover:text-gray-600" id="menu-0-button" aria-expanded="false" aria-haspopup="true">
                  <span class="sr-only">Open options</span>
                  <button type="button" style="max-width: 2000px;" class="w-full rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                    <%= "Delivered in #{distance_of_time_in_words_to_now(day.date.beginning_of_day)}" %>
                  </button>
                </a>
              </div>
            </div>
          </div>
        <% end %>
      </ol>
    </div>
  </div>
  <div class="mt-10 flex items-start justify-start">
    <a href="<%= user_root_path %>" class="ml-4 text-sm font-semibold leading-6 text-indigo-600">
      <span aria-hidden="true">&larr;</span>
      Back to home
    </a>
  </div>
