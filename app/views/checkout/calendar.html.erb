<%= render partial: 'progress', locals: {
  steps: {
    'Pick Day' => 'active',
    'Choose Slot' => 'disabled',
    'Customize a Meal' => 'disabled',
    'Checkout' => 'disabled'
  }}
%>
<div class="border border-gray-400 rounded p-10 m-20 my-8">
  <div>
    <h2 class="text-base font-semibold leading-6 text-gray-900"><%= @upcoming_meal_copy %></h2>
    <div class="lg:grid lg:grid-cols-12 lg:gap-x-16">
      <div class="mt-10 text-center lg:col-start-8 lg:col-end-13 lg:row-start-1 lg:mt-9 xl:col-start-9">
        <div class="flex items-center text-gray-900">
          <% unless @current_month == 1 %>
            <a href="/calendar?month=<%= @current_month - 1 %>">
              <button type="button" class="-m-1.5 flex flex-none items-center justify-center p-1.5 text-gray-400 hover:text-gray-500">
                <span class="sr-only">Previous month</span>
                <svg class="h-10 w-10" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd" />
                </svg>
              </button>
            </a>
          <% end %>
          <div class="flex-auto text-sm font-semibold"><%= Date::MONTHNAMES[@current_month] %></div>
          <% unless @current_month == 12 %>
            <a href="/calendar?month=<%= @current_month + 1 %>">
              <button type="button" class="-m-1.5 flex flex-none items-center justify-center p-1.5 text-gray-400 hover:text-gray-500">
                <span class="sr-only">Next month</span>
                <svg class="h-10 w-10" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
                </svg>
              </button>
            </a>
          <% end %>
        </div>
        <div class="mt-6 grid grid-cols-7 text-xs leading-6 text-gray-500">
          <div>M</div>
          <div>T</div>
          <div>W</div>
          <div>T</div>
          <div>F</div>
          <div>S</div>
          <div>S</div>
          <!--  // black select = bg-gray-900 font-semibold text-white -->
          <!--  // has days = text-indigo-600 // font-semibold-->
        </div>
        <div class="isolate mt-2 grid grid-cols-7 gap-px rounded-lg bg-gray-200 text-sm shadow ring-1 ring-gray-200">
          <% (@start_date..@end_date).each do |date| %>
            <% day = @days.find { |d| d.date.to_date == date } %>
            <% if date == Date.today %>
              <!-- Current Day -->
              <button type="button" class="bg-white py-1.5 text-gray-900 hover:bg-gray-100 focus:z-10">
                <time datetime="<%= date.strftime("%Y-%m-%d") %>" class="mx-auto flex h-7 w-7 items-center justify-center rounded-full bg-gray-900 font-semibold text-white">
                  <%= date.day %>
                </time>
              </button>
            <% elsif day && day.products.any? %>
              <!-- Day with product(s) -->
              <a href="/meals/<%= day.date.strftime("%Y-%m-%d") %>" class="text-indigo-600 bg-white py-1.5 text-gray-900 hover:bg-gray-100 focus:z-10">
                <time datetime="<%= date.strftime("%Y-%m-%d") %>" class="mx-auto flex h-7 w-7 items-center justify-center rounded-full bg-indigo-900 font-semibold text-white">
                  <%= date.day %>
                </time>
              </a>
            <% else %>
              <!-- Day without product(s) -->
              <button type="button" class="bg-white py-1.5 text-gray-900 hover:bg-gray-100 focus:z-10">
                <time datetime="<%= date.strftime("%Y-%m-%d") %>" class="mx-auto flex h-7 w-7 items-center justify-center rounded-full">
                  <%= date.day %>
                </time>
              </button>
            <% end %>
          <% end %>
          <button type="button" class="bg-gray-50 py-1.5 text-gray-400 hover:bg-gray-100 focus:z-10">
            <time datetime="2022-02-01" class="mx-auto flex h-7 w-7 items-center justify-center rounded-full">1</time>
          </button>
          <button type="button" class="bg-gray-50 py-1.5 text-gray-400 hover:bg-gray-100 focus:z-10">
            <time datetime="2022-02-02" class="mx-auto flex h-7 w-7 items-center justify-center rounded-full">2</time>
          </button>
          <button type="button" class="bg-gray-50 py-1.5 text-gray-400 hover:bg-gray-100 focus:z-10">
            <time datetime="2022-02-03" class="mx-auto flex h-7 w-7 items-center justify-center rounded-full">3</time>
          </button>
          <button type="button" class="bg-gray-50 py-1.5 text-gray-400 hover:bg-gray-100 focus:z-10">
            <time datetime="2022-02-04" class="mx-auto flex h-7 w-7 items-center justify-center rounded-full">4</time>
          </button>
        </button>
      </div>
    </div>
    <ol class="mt-4 divide-y divide-gray-100 text-sm leading-6 lg:col-span-7 xl:col-span-8">
      <% @days.each do |day| %>
        <div class="lg:col-start-3 lg:row-end-1">
          <h2 class="sr-only">Summary</h2>
          <div class="rounded-lg bg-gray-50 shadow-sm ring-1 ring-gray-900/5">
            <div class="flex-auto pl-6 pt-6">
              <dt class="text-sm font-semibold leading-6 text-gray-900"><%= day.description.empty? ? day.date.strftime("%A, %B %d, %Y") : day.description %></dt>
            </div>
            <div class="row-span-full">
              <% day.products.each do |product| %>
                <div class="flex flex-col space-y-4">
                  <div class="w-full h-20 m-10">
                    <%= image_tag url_for(product.main_image), class: "h-12 w-12 flex-none rounded-full bg-gray-50" if product.main_image.attached? %>
                    <div class="min-w-0">
                      <p class="text-sm font-semibold leading-6 text-gray-900"></p>
                      <p class="mt-1 truncate text-xs leading-5 text-gray-500"><%= product.title %></p>
                      <div class="flex-none self-end px-6 pt-4">
                        <% product.tags.each do |tag| %>
                          <dd class="inline-flex items-center rounded-md bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20"><%= tag %></dd>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
              <div class="mt-6 border-t border-gray-900/5 px-6 py-6">
                <a href="/meals/<%= day.date.strftime('%Y-%m-%d') %>" class="flex items-center rounded-full p-2 text-gray-500 hover:text-gray-600" id="menu-0-button" aria-expanded="false" aria-haspopup="true">
                  <span class="sr-only">Open options</span>
                  <button type="button" style="min-width: 150px;" class="w-full rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                    Select <%= day.date.strftime('%A') %>
                  </button>
                </a>
              </div>
            </div>
          </div>
          <li class="relative flex space-x-6 py-6">
            <img src="https://riss-dish.static.app/favicon.ico" alt="" class="h-14 w-14 flex-none rounded-full">
            <div class="flex-auto">
              <h3 class="pr-10 font-semibold text-gray-900">
                <%= day.description.empty? ? day.date.strftime("%A, %B %d, %Y") : day.description %>
              </h3>
              <dl class="mt-2 flex flex-col text-gray-500 xl:flex-row">
                <div>
                  <div class="flex items-start space-x-3">
                    <span class="sr-only">Products</span>
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
                      <path fill-rule="evenodd" d="M12.963 2.286a.75.75 0 00-1.071-.136 9.742 9.742 0 00-3.539 6.177A7.547 7.547 0 016.648 6.61a.75.75 0 00-1.152-.082A9 9 0 1015.68 4.534a7.46 7.46 0 01-2.717-2.248zM15.75 14.25a3.75 3.75 0 11-7.313-1.172c.628.465 1.35.81 2.133 1a5.99 5.99 0 011.925-3.545 3.75 3.75 0 013.255 3.717z" clip-rule="evenodd" />
                    </svg>
                    <% day.products.each do |product| %>
                      <%= product.title %>
                    <% end%>
                  </div>
                </div>
                <div class="flex items-start space-x-3">
                  <span class="sr-only">Date</span>
                  <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M5.75 2a.75.75 0 01.75.75V4h7V2.75a.75.75 0 011.5 0V4h.25A2.75 2.75 0 0118 6.75v8.5A2.75 2.75 0 0115.25 18H4.75A2.75 2.75 0 012 15.25v-8.5A2.75 2.75 0 014.75 4H5V2.75A.75.75 0 015.75 2zm-1 5.5c-.69 0-1.25.56-1.25 1.25v6.5c0 .69.56 1.25 1.25 1.25h10.5c.69 0 1.25-.56 1.25-1.25v-6.5c0-.69-.56-1.25-1.25-1.25H4.75z" clip-rule="evenodd" />
                  </svg>
                  <time datetime="<%= day.date.strftime("%Y-%m-%dT%H:%M") %>">
                    <%= day.description.empty? ? distance_of_time_in_words_to_now(day.date) + " away" : day.date.strftime("%B %d, %Y") %>
                  </time>
                </div>
              </dl>
            </div>
          </li>
        <% end %>
      </ol>
    </div>
  </div>
  <div class="mt-10 flex items-start justify-start">
    <a href="<%= user_root_path %>" class="ml-4 text-sm font-semibold leading-6 text-indigo-600">
      <span aria-hidden="true">&larr;</span>
      Back to home
    </a>
  </div>
