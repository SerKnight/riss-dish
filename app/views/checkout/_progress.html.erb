<ol role="list" class="no-list divide-y divide-gray-300 rounded-md border border-gray-300 md:flex md:divide-y-0">
  <% steps.each_with_index do |(step, (state, path)), index| %>
    <li class="relative md:flex md:flex-1">
      <a href="<%= path %>" class="w-full flex items-center justify-between px-6 py-4 text-sm font-medium <%= 'bg-indigo-200' if state == 'completed' %> <%= 'bg-indigo-100' if state == 'active' %> <%= 'text-gray-500' if state == 'disabled' %>" aria-current="step">
        <div class="flex items-center">
          <span class="flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-full <%= 'bg-indigo-600 group-hover:bg-indigo-800' if state == 'completed' %> <%= 'border-2 border-indigo-600 text-indigo-600' if state == 'active' %> <%= 'border-2 border-gray-300 group-hover:border-gray-400' if state == 'disabled' %>">
            <% if state == 'completed' %>
              <svg class="h-6 w-6 text-white" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M19.916 4.626a.75.75 0 01.208 1.04l-9 13.5a.75.75 0 01-1.154.114l-6-6a.75.75 0 011.06-1.06l5.353 5.353 8.493-12.739a.75.75 0 011.04-.208z" clip-rule="evenodd" />
              </svg>
            <% else %>
              <span><%= index + 1 %></span>
            <% end %>
          </span>
          <span class="ml-4 text-sm font-medium <%= 'text-gray-900' if state == 'completed' %> <%= 'text-indigo-600' if state == 'active' %> <%= 'text-gray-500' if state == 'disabled' %>"><%= step %></span>
        </div>
        <span>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
          </svg>
        </span>
      </a>
    </li>
  <% end %>
</ol>
