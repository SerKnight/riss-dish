<%= content_for :title, "Slots" %>
<%= turbo_stream_from :slots %>
<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <div>
      <h1 class="h3">Slots</h1>
      <div class="text-sm font-medium">
        <span class="text-gray-500">Sort by:</span>
        <%= sortable @slots, :day_id, "Day", class: "text-gray-700 mr-1" %>
        <%= sortable @slots, :delivery_start_time, "Delivery start time", class: "text-gray-700 mr-1" %>
        <%= sortable @slots, :delivery_end_time, "Delivery end time", class: "text-gray-700 mr-1" %>
        <%= sortable @slots, :available_additions, "Available additions", class: "text-gray-700 mr-1" %>
        <%= sortable @slots, :available_entrees, "Available entrees", class: "text-gray-700 mr-1" %>
      </div>
    </div>
    <%= link_to t("shared.scaffold.new.title", model: "Slot"), new_slot_path, class: "btn btn-white" %>
  </div>
  <%= tag.div id: ("slots" if first_page?), class: "bg-white rounded-md shadow p-6 space-y-8" do %>
    <%= render partial: "slots/index", collection: @slots, as: :slot, cached: true %>
    <div class="hidden only:flex flex-col items-center justify-between lg:flex-row">
      <%= image_tag "empty.svg", class: "mb-4 lg:w-1/2" %>
      <div class="flex-1 text-center">
        <p class="mb-4 h3">Create your first Slot</p>
        <%= link_to t("shared.scaffold.new.title", model: "Slot"), new_slot_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
  <% if @pagy.pages > 1 %>
    <div class="my-6 text-center">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>
