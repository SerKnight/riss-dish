<%= form_with(model: slot) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :day_id %>
    <%= form.text_field :day_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :delivery_start_time %>
    <%= form.datetime_field :delivery_start_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :delivery_end_time %>
    <%= form.datetime_field :delivery_end_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :available_additions %>
    <%= form.number_field :available_additions, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :available_entrees %>
    <%= form.number_field :available_entrees, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), slots_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), slot_path(@slot), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
