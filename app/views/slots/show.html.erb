<%= content_for :title, "Slots ##{@slot.id}" %>
<%= turbo_stream_from @slot %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">
      <%= link_to "Slots", slots_path, class: "text-black" %>
      <span class="text-gray-400 font-light mx-2">\</span>
      Slot #<%= @slot.id %>
    </h1>
    <%= link_to t("edit"), edit_slot_path(@slot), class: "btn btn-white" %>
  </div>

  <div class="p-8 bg-white rounded shadow">
    <%= render @slot %>
  </div>
</div>
